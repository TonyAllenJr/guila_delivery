<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView_produto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_produto_imagem"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/imagem_do_produto" />
        
        <TextView
            android:id="@+id/item_produto_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/item_produto_imagem"
            app:layout_constraintStart_toStartOf="@id/item_produto_imagem"
            app:layout_constraintEnd_toEndOf="@id/item_produto_imagem"
            tools:text="Descrição do produto"/>

        <TextView
            android:id="@+id/item_produto_preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/item_produto_nome"
            app:layout_constraintStart_toStartOf="@id/item_produto_nome"
            app:layout_constraintEnd_toEndOf="@id/item_produto_nome"
            tools:text="R$ 10,00"/>

        <TextView
            android:id="@+id/item_produto_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/item_produto_preco"
            app:layout_constraintStart_toStartOf="@id/item_produto_nome"
            app:layout_constraintEnd_toEndOf="@id/item_produto_nome"
            tools:text="1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

