<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView_produto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_lista_produtos_imagem"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:contentDescription="@string/imagem_do_produto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_produto_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_lista_produtos_imagem"
            app:layout_constraintStart_toStartOf="@id/item_lista_produtos_imagem"
            app:layout_constraintEnd_toEndOf="@id/item_lista_produtos_imagem"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.2"
            tools:text="Descrição do produto"/>

        <TextView
            android:id="@+id/item_produto_preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@id/item_produto_nome"
            app:layout_constraintStart_toStartOf="@id/item_produto_nome"
            app:layout_constraintTop_toBottomOf="@id/item_produto_nome"
            tools:text="R$ 10,00" />

<!--        <TextView-->
<!--            android:id="@+id/item_produto_sem_estoque"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="4dp"-->
<!--            android:textSize="16sp"-->
<!--            app:layout_constraintEnd_toEndOf="@id/item_produto_nome"-->
<!--            app:layout_constraintStart_toStartOf="@id/item_produto_nome"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            android:text="Sem estoque" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

